{
  "name": "mybatisxx",
  "displayName": "MybatisXX",
  "description": "Enhanced MyBatis support for VSCode, inspired by IntelliJ IDEA's MybatisX plugin",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mybatisxx.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:xml",
    "workspaceContains:**/*Mapper.java",
    "workspaceContains:**/*Mapper.xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mybatisx.gotoXml",
        "title": "MybatisXX: Go to XML",
        "icon": {
          "light": "./resources/images/statement.svg",
          "dark": "./resources/images/statement.svg"
        }
      },
      {
        "command": "mybatisx.gotoJava",
        "title": "MybatisXX: Go to Java Interface",
        "icon": {
          "light": "./resources/images/mapper_method.svg",
          "dark": "./resources/images/mapper_method.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "mybatisx.gotoXml",
        "key": "alt+shift+x",
        "when": "editorTextFocus && editorLangId == 'java'"
      },
      {
        "command": "mybatisx.gotoJava",
        "key": "alt+shift+j",
        "when": "editorTextFocus && editorLangId == 'xml'"
      }
    ],
    "languages": [
      {
        "id": "java",
        "extensions": [".java"]
      },
      {
        "id": "xml",
        "extensions": [".xml"]
      }
    ],
    "iconThemes": [
      {
        "id": "mybatisxx-icons",
        "label": "MybatisXX Icons",
        "path": "./resources/mybatisxx-icon-theme.json"
      }
    ],
    "customEditorProviders": [
      {
        "viewType": "mybatisxx.mapperPreview",
        "displayName": "MyBatis Mapper Preview",
        "selector": [
          {
            "filenamePattern": "*Mapper.xml"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/mssql": "^9.1.7",
    "@types/node": "^14.x",
    "@types/oracledb": "^6.6.0",
    "@types/pg": "^8.11.14",
    "@types/vscode": "^1.60.0",
    "jest": "^27.0.0",
    "typescript": "^4.x"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "mssql": "^7.2.1",
    "mysql2": "^2.3.3",
    "oracledb": "^5.3.0",
    "pg": "^8.7.1"
  },
  "license": "MIT"
}
