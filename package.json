{
  "name": "mybatisxx",
  "displayName": "MybatisXX",
  "description": "Enhanced MyBatis support for VSCode, inspired by IntelliJ IDEA's MybatisX plugin",
  "version": "0.0.1",
  "icon": "resources/images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mybatisxx.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:xml",
    "workspaceContains:**/*Mapper.java",
    "workspaceContains:**/*Mapper.xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mybatisx.gotoXml",
        "title": "MybatisXX: Go to XML",
        "icon": {
          "light": "./resources/icons/mybatis-java.svg",
          "dark": "./resources/icons/mybatis-java.svg"
        }
      },
      {
        "command": "mybatisx.gotoJava",
        "title": "MybatisXX: Go to Java Interface",
        "icon": {
          "light": "./resources/icons/mybatis-xml.svg",
          "dark": "./resources/icons/mybatis-xml.svg"
        }
      },
      {
        "command": "mybatisX.gotoMapperFile",
        "title": "MyBatisX: 跳转到对应的Mapper文件"
      }
    ],
    "keybindings": [
      {
        "command": "mybatisx.gotoXml",
        "key": "alt+shift+x",
        "when": "editorTextFocus && editorLangId == 'java'"
      },
      {
        "command": "mybatisx.gotoJava",
        "key": "alt+shift+j",
        "when": "editorTextFocus && editorLangId == 'xml'"
      },
      {
        "command": "mybatisX.gotoMapperFile",
        "key": "alt+m",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "java",
        "extensions": [
          ".java"
        ]
      },
      {
        "id": "xml",
        "extensions": [
          ".xml"
        ]
      }
    ],
    "configuration": {
      "title": "MybatisXX",
      "properties": {
        "mybatisx.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "启用代码锚点跳转功能"
        },
        "mybatisx.enableDecorations": {
          "type": "boolean",
          "default": true,
          "description": "启用方法前图标显示功能"
        }
      }
    },
    "customEditorProviders": [
      {
        "viewType": "mybatisxx.mapperPreview",
        "displayName": "MyBatis Mapper Preview",
        "selector": [
          {
            "filenamePattern": "*Mapper.xml"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/mssql": "^9.1.7",
    "@types/node": "^14.x",
    "@types/oracledb": "^6.6.0",
    "@types/pg": "^8.11.14",
    "@types/tedious": "^4.0.14",
    "@types/vscode": "^1.60.0",
    "jest": "^27.0.0",
    "typescript": "^4.x"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "mssql": "^11.0.1",
    "mysql2": "^3.14.0",
    "oracledb": "^5.3.0",
    "pg": "^8.7.1"
  },
  "license": "MIT",
  "extensionDependencies": [
    "redhat.java"
  ]
}
